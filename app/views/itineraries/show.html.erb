<h1> ITINERARY </h1>

<%= @itinerary.name %>

<% @events.each do |e| %>
  <div>
    <h3><%= e.name %></h3>
    <p><%= e.address %></p>
    <%= image_tag src="#{e.image_url}", {:style => "width: 30%; height: 30%; border: 4px inset rgba(222, 222, 222, 0.5);"}%>
    <%= link_to "Delete", event_path(e), method: :delete, data: { confirm: 'Are you certain?' } %>
  </div>
<% end %>

     <div class="row">
        <div class="four columns category">
          <div class="event_text">
            <%=image_tag "#{@loc_one_img}", {:style => "width: 100%; height: 40vh;  border: 4px inset rgba(222, 222, 222, 0.5);"}%>
            <div class="centered">
            <p><%=@loc_one%></p>
            <p>Address: <%=@address_one%></p>

            <p>Price:<%=@loc_one_price%></p>
           
            <%= form_for( :event, :html => { :role => "form" }, url: events_path ) do |f| %>
              <%= f.hidden_field :name, value: @loc_one %>
              <%= f.hidden_field :address, value: @address_one %>
              <%= f.hidden_field :image_url, value: @loc_one_img %>
              <%= f.hidden_field :itinerary_id, value: @itinerary.id %>
              <%= f.submit "Add" %>
            <% end %>



            </div>
          </div>
        </div>
        <div class="four columns category">
          <div class="event_text">
            <%=image_tag "#{@loc_two_img}", {:style => "width: 100%; height: 40vh; border: 4px inset rgba(222, 222, 222, 0.5);"}%>
            <div class="centered">

            <p><%=@loc_two%></p>
            <p>Address: <%=@address_two%></p>
            <p>Price:<%=@loc_two_price%></p>
            <%= form_for( :event, :html => { :role => "form" }, url: events_path ) do |f| %>
              <%= f.hidden_field :name, value: @loc_two %>
              <%= f.hidden_field :address, value: @address_two %>
              <%= f.hidden_field :image_url, value: @loc_two_img %>
              <%= f.hidden_field :itinerary_id, value: @itinerary.id %>
              <%= f.submit "Add" %>
            <% end %>

            </div>
          </div>
        </div>
        <div class="four columns category">
          <div class="event_text">
            <% randevent = @req['events'].sample  %>
            <img src="<%= randevent['logo']['url'] %>">
            <p>Event: <%= randevent['name']['text'] %></p>
            <p>Description: <%= randevent['description']['text'].slice(0..150) %></p>
            <p>Time: <%= randevent['start']['local'] %>
          </div>
        </div>
      </div>