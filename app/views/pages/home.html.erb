

<div class="container">
      <h1 class="section heading">Plan my Nite</h1>
      <p class="section description">Sit back and let us "sort" your night out for you.</p>
      <div class="row">
        <div class="four columns category">
          <div class="event_text">
            <%=image_tag "#{@loc_one_img}", {:style => "width: 100%; height: 40vh;  border: 4px inset rgba(222, 222, 222, 0.5);"}%>
            <div class="centered">
            <p><%=@loc_one%></p>
            <p>Address: <%=@address_one%></p>

            <p>Price:<%=@loc_one_price%></p>

            <p>Distance:<%=@loc_one_distance%></p>


            <%= form_for( :event, :html => { :role => "form" }, url: events_path ) do |f| %>
              <%= f.hidden_field :name, value: @loc_one %>
              <%= f.hidden_field :address, value: @address_one %>
              <%= f.hidden_field :image_url, value: @loc_one_img %>
              <%= f.collection_select :itinerary_id, @itinerary_index, :id, :name, include_blank: true %>
              <%= f.submit "Add" %>
            <% end %>

            </div>
          </div>
        </div>
        <div class="four columns category">
          <div class="event_text">
            <%=image_tag "#{@loc_two_img}", {:style => "width: 100%; height: 40vh; border: 4px inset rgba(222, 222, 222, 0.5);"}%>
            <div class="centered">

            <p><%=@loc_two%></p>
            <p>Address: <%=@address_two%></p>
            <p>Price:<%=@loc_two_price%></p>
            <p><%=@loc_two_distance%></p>
            
            <%= form_for( :event, :html => { :role => "form" }, url: events_path ) do |f| %>
              <%= f.hidden_field :name, value: @loc_two %>
              <%= f.hidden_field :address, value: @address_two %>
              <%= f.hidden_field :image_url, value: @loc_two_img %>
            <%= f.collection_select :itinerary_id, @itinerary_index, :id, :name, include_blank: true %>

              <%= f.submit "Add" %>
            <% end %>

            </div>
          </div>
        </div>
        <div class="four columns category">
          <div class="event_text">

            <% randevent = @req['events'].sample  %>
            <% if !randevent['logo']['url'].nil?%>
            <img src="<%= randevent['logo']['url'] %>">
            <%end%>
            <p>Event: <%= randevent['name']['text'] %></p>
            <p>Description: <%= randevent['description']['text'].byteslice(0..150) %></p>
            <p>Time: <%= randevent['start']['local'] %>
            <p>Price is free?: <%=randevent["is_free"]%></p>

              <%=image_tag "#{@event_img}", {:style => "width: 100%; height: 40vh; border: 4px inset rgba(222, 222, 222, 0.5);"}%>
              <p>Event: <%= @event_name %></p>
              <p>Description: <%= @event_desc %></p>
              <p>Time Start: <%= @event_start %> </p>
              <p>Time End: <%= @event_end %> </p>
              <%= form_for( :event, :html => { :role => "form" }, url: events_path ) do |f| %>
                <%= f.hidden_field :name, value: @event_name %>
                <%= f.hidden_field :image_url, value: @event_img %>
                <%= f.collection_select :itinerary_id, @itinerary_index, :id, :name, include_blank: true %>
                <%= f.submit "Add"%>
              <% end %>

          </div>
        </div>
      </div>
    </div>

    <div class="section">
    <%= form_for( :itinerary, :html => { :role => "form" }, url: itineraries_path ) do |f| %>
      <%= f.text_field :name, value: "", placeholder: 'Itinerary Name' %>
      <br>
      <input class="button-primary" <%= f.submit "Create" %>
    <% end %>
    </div>



    <%= form_tag charges_path do %>
      <article>
        <% if flash[:error].present? %>
          <div id="error_explanation">
            <p><%= flash[:error] %></p>
          </div>
        <% end %>
        <label class="amount">
          <span>Amount: $59.99</span>
        </label>
      </article>

      <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
              data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
              data-description="PERSONALIZED CONCIERGE"
              data-name="HAPPILY MEDIUMLY"
              data-amount="5999"
              data-locale="auto"
              data-image="http://weclipart.com/gimg/D58C047681898238/vacation_8-256.png"
              ></script>
    <% end %>



